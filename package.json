{
  "name": "welpen-online-root",
  "private": true,
  "type": "module",
  "scripts": {
    "sync-types": "rm -rf client/types server/types && cp -r types client/types && cp -r types server/types",
    "prebuild": "npm run sync-types",
    "build": "cd client && pnpm build",
    "prepare": "husky",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write ."
  },
  "dependencies": {
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "eslint": "^9.14.0",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.12.2",
    "eslint-plugin-import": "^2.30.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "prettier": "^3.3.3",
    "husky": "^9.1.7"
  }
}
